#!/usr/bin/env bash

[[ -f $JOT_HOME/.env ]] && source $JOT_HOME/.env

JOT_HOME="${JOT_HOME:-.}"
JOT_EDITOR=${JOT_EDITOR:-$EDITOR}
JOT_PAGER=${JOT_PAGER:-less}
JOT_COPY=${JOT_COPY:-xclip}
JOT_DATE_FMT=${JOT_DATE_FMT:-%Y-%m-%d}
JOT_EXT=${JOT_EXT:-txt}

# Drop trailing /
JOT_HOME="${JOT_HOME%/}"

check_file_exists() {
  if [[ ! -f "$1" ]]; then
    echo "File does not exist: $1"
    exit 1
  fi
}

parse_date() {
  case $1 in
    tod|today|td|'')
      date +$JOT_DATE_FMT
      ;;
    y|yesterday|yd)
      date -d yesterday +$JOT_DATE_FMT
      ;;
    tom|tommorow|tm)
      date -d tomorrow +$JOT_DATE_FMT
      ;;
    *)
      echo $1
      ;;
  esac
}

file_from_date() {
  date="$(parse_date $1)"
  echo "$JOT_HOME/$date.$JOT_EXT"
}

usage() {
  cat <<-EOF
Usage: jot [command] [date]

command:

  v[iew]        view notes for a day
  c[opy] or cp  copy notes for a day
  e[dit]        edit notes for one or more days (default)
  l[ist] or ls  list notes

date:

  tod[ay]     or td  perform command for today
  y[esterday] or yd                  ... yesterday
  tom[orrow]  or tm                  ... tomorrow
  2020-04-28                         ... 2020-04-28
EOF
}

view() {
  local file="$(file_from_date $1)"

  check_file_exists $file

  $JOT_PAGER "$file"
}

copy() {
  local file="$(file_from_date $1)"

  check_file_exists $file

  $JOT_COPY "$file" && echo "Copied to clipboard: $file"
}

edit() {
  local files_arr=()

  if [[ $# -eq 0 ]]; then
    local file=$(file_from_date td)
    files_arr=("$file")
  else
    for arg in "$@"; do
      local file=$(file_from_date $arg)
      files_arr+=("$file")
    done
  fi

  local files="${files_arr[@]}"

  echo "Editing $# file(s):"
  echo
  echo $files | xargs -n 1 echo
  echo
  echo 'Press any key to continue'
  read

  sh -c "$JOT_EDITOR $JOT_EDITOR_OPTS $files"
}

list() {
  echo "Today is $(date +'%a, %d %b %Y')"
  echo

  for file in "$JOT_HOME"/*.$JOT_EXT; do
    date=$(basename $file .$JOT_EXT)
    lines=$(wc -l $file | cut -d ' ' -f 1)
    echo -n "$date"
    printf ' (%2d)' $lines
    echo
  done
}

case $1 in
  e|edit|'')
    shift
    edit "$@"
    exit
    ;;
  v|view)
    date="$(parse_date $2)"
    view "$date"
    exit
    ;;
  c|copy|cp)
    date="$(parse_date $2)"
    copy "$date"
    exit
    ;;
  l|list|ls)
    list
    exit
    ;;
  *)
    usage
    exit 1
    ;;
esac
